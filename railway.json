{
  "$schema": "https://railway.app/railway.json",
  "build": {
    "builder": "NIXPACKS",
    "python": {
      "pipRequirementsFile": "requirements.txt"
    }
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "startCommand": "python -m uvicorn mcp_server:app --host 0.0.0.0 --port $PORT"
  }
}
